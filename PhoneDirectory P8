#include <map>
#include <iostream>
#include <string>
#include <fstream>

using namespace std;

int main() {

    //Dictionary called content
    map<std::string, std::string> content;
    ifstream in("new.txt");
    string word, number;

    while (getline(in, number) && getline(in, word)) { content[number] = word;}
    //Add each line in text file into dictionary 

    // for (const auto& p : content)
    //     std::cout << p.first << " : "
    //     << p.second << std::endl;
    //        std::cout << std::endl;

        string variable;

        cout << "Please enter a name or number to search \n";

        cin >> variable;
        //cout << "searching " << content.size() << " records... \n\n";

        for (const auto& p : content)
        
            if (variable == p.first) {
                cout << "contact details :\n " << p.first << ", \t" << "t: " << p.second <<endl;

            }
            //Prints the contact info using dictionary keys

            else if (variable == p.second) {
                cout << "contact details :\n " << p.first << ", \t" << "t: " << p.second <<endl;

            }

        //Program only working when number is searched not letter

        cout << "\n No more values found";


}
