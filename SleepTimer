#include <iostream>       
#include <thread>         
#include <chrono>         


//SleepTimer function
//input any int in the parameter
void SleepTimer(int time){
  for (int i=time; i>0; --i) {
    //Loop counts down from parameter time (default 10) to 0
    std::cout << i << std::endl;
    //Print all ints
    std::this_thread::sleep_for (std::chrono::seconds(1));
    //Duration in seconds
  }


  std::cout << "Wake Up\n";
}

int main() 
{
  std::cout << "countdown:\n";
  SleepTimer(10);
  //function declared 
  return 0;
}
